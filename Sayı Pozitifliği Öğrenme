#include <stdio.h>
#include <stdlib.h>
int a = 0;
int main()
{
    printf("Durumunu ogrenmek istediginiz sayiyi giriniz:\n");
    scanf("%int", &a);

    if(a>0)
    {
        printf("Girilen sayinin degeri pozitiftir.");
    }

    else if(a<0)
    {
        printf("Girilen sayinin degeri negatiftir.");
    }

    else
        printf("Girilen sayinin degeri 0'dir.");
    return 0;
}
